@using ArmwrestlingApp.ViewModels

@model ArmwrestlingApp.ViewModels.Competition.CompetitionDetailsViewModel

@{
    var competition = Model;
}

<div class="competition-header text-center">
    <h2>@competition.Name</h2>

    @if (!string.IsNullOrEmpty(competition.ImageUrl))
    {
        <img src="@competition.ImageUrl" alt="@competition.Name image" class="competition-image mx-auto" />
    }

<h3>
    📍 @competition.Location &nbsp;&nbsp;
    📅 @competition.StartDate.ToShortDateString() - @competition.EndDate.ToShortDateString() &nbsp;&nbsp;
    🏆 @competition.Type
</h3>
</div>


<div class="category-tiles">
    @foreach (var category in Model.Categories)
    {
        <div class="category-tile">
            <h4>@category.Name</h4>
            <p>@category.ParticipantsCount participants</p>
            <a asp-page="/CategoryDetails" asp-route-id="@category.Id" class="btn btn-primary">View Competitors</a>
        </div>
    }
</div>