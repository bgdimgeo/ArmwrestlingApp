@{
    ViewData["Title"] = "Armwrestling Tournaments App";
}

@using ArmwrestlingApp.ViewModels.Competition;

@model CompetitionListViewModel

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">

        <!-- Ongoing Competitions Section (on top) -->
        <div class="col-12">
            <h2>Ongoing Competitions</h2>
            <div class="scrollable-container">
                @if (Model.OnGoingCompetitions.Any())
                {
                    <div class="scrollable-list">
                        @foreach (var competition in Model.OnGoingCompetitions)
                        {
                            <a class="competition-card" asp-controller="Competition" asp-action="Details" asp-route-id="@competition.Id">
                                <div class="card">
                                    @if (!string.IsNullOrEmpty(competition.ImageUrl))
                                    {
                                        <img src="@competition.ImageUrl" class="card-img-top" alt="@competition.Name" />
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@competition.Name</h5>
                                        <p class="card-text">
                                            From @competition.StartDate.ToString("MMMM dd, yyyy")<br />
                                            To @competition.EndDate.ToString("MMMM dd, yyyy")
                                        </p>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <p>No ongoing competitions at the moment.</p>
                }
            </div>
        </div>

        <!-- Past Competitions Section -->
        <div class="col-12">
            <h2>Past Competitions</h2>
            <div class="scrollable-container">
                @if (Model.PastCompetitions.Any())
                {
                    <div class="scrollable-list">
                        @foreach (var competition in Model.PastCompetitions)
                        {
                            <a class="competition-card" asp-controller="Competition" asp-action="Details" asp-route-id="@competition.Id">
                                <div class="card">
                                    @if (!string.IsNullOrEmpty(competition.ImageUrl))
                                    {
                                        <img src="@competition.ImageUrl" class="card-img-top" alt="@competition.Name" />
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@competition.Name</h5>
                                        <p class="card-text">
                                            From @competition.StartDate.ToString("MMMM dd, yyyy")<br />
                                            To @competition.EndDate.ToString("MMMM dd, yyyy")
                                        </p>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <p>No past competitions available.</p>
                }
            </div>
        </div>

        <!-- Future Competitions Section -->
        <div class="col-12">
            <h2>Upcoming Competitions</h2>
            <div class="scrollable-container">
                @if (Model.FutureCompetitions.Any())
                {
                    <div class="scrollable-list">
                        @foreach (var competition in Model.FutureCompetitions)
                        {
                            <a class="competition-card" asp-controller="Competition" asp-action="Details" asp-route-id="@competition.Id">
                                <div class="card">
                                    @if (!string.IsNullOrEmpty(competition.ImageUrl))
                                    {
                                        <img src="@competition.ImageUrl" class="card-img-top" alt="@competition.Name" />
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@competition.Name</h5>
                                        <p class="card-text">
                                            From @competition.StartDate.ToString("MMMM dd, yyyy")<br />
                                            To @competition.EndDate.ToString("MMMM dd, yyyy")
                                        </p>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <p>No upcoming competitions available.</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .scrollable-container {
        overflow-x: auto;
        white-space: nowrap;
        padding-bottom: 20px;
    }

    .scrollable-list {
        display: flex;
        gap: 20px;
    }

    .competition-card {
        display: inline-block;
        min-width: 250px;
        max-width: 100%;
        height: auto;
        text-decoration: none;
        color: inherit;
    }

    .card {
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 16px;
        font-weight: bold;
    }

    .card-text {
        font-size: 14px;
        color: #555;
    }

    .card-img-top {
        width: 100%;
        height: 120px; /* Adjust height as needed */
        object-fit: cover; /* Crop and fit image nicely */
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }

    .card:hover {
        transform: translateY(-5px);
    }
</style>