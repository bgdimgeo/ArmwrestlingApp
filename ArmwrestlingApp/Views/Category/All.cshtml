@using ArmwrestlingApp.Common.Enums
@using ArmwrestlingApp.ViewModels.Competition

@model IEnumerable<ArmwrestlingApp.ViewModels.Categorie.CategoriesDetailsViewModel>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<p>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Division)</th>
            <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Division</td>
                <td>@category.Gender</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>