@{
    ViewData["Title"] = "Welcome to ArmwrestlingApp";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Armwrestling Tournaments App</h1>
        <p class="lead">Track, join, and organize armwrestling competitions across the world.</p>
        <a asp-controller="Competition" asp-action="All" class="btn btn-primary btn-lg mt-3">
            Browse Competitions
        </a>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-trophy fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Upcoming Tournaments</h5>
                    <p class="card-text">View upcoming armwrestling tournaments and register to compete.</p>
                    <a asp-controller="Competition" asp-action="All" class="btn btn-outline-primary">
                        View Events
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-chart-line fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Rankings</h5>
                    <p class="card-text">See the top armwrestlers based on tournament performance and wins.</p>
                    <a asp-controller="Ranking" asp-action="Index" class="btn btn-outline-success">
                        View Rankings
                    </a>
                </div>
            </div>
        </div>
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                     <div class="card-body">
                         <i class="fas fa-user-plus fa-3x mb-3 text-info"></i>
                         <h5 class="card-title">Register</h5>
                         <p class="card-text">Sign up as a competitor or organizer to join the armwrestling community.</p>
                         <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-success">
                             Get Started
                         </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
