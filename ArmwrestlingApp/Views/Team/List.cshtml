@using ArmwrestlingApp.ViewModels.Team

@model IEnumerable<CreateTeamViewModel>
@{
    ViewData["Title"] = "All Teams";
}

<h2 class="mb-4">All Teams</h2>

<a asp-action="Create" class="btn btn-primary mb-4">+ Create New Team</a>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var team in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrWhiteSpace(team.ImageUrl))
                {
                    <img src="@team.ImageUrl" class="card-img-top" alt="@team.Name" style="object-fit: cover; height: 180px;">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@team.Name</h5>
                    <p class="card-text">
                        <strong>Town:</strong> @team.Town <br />
                        <strong>Country:</strong> @team.Country
                    </p>

                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-id="@team.Id" class="btn btn-sm btn-outline-info me-1">View</a>
                        <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-sm btn-outline-warning me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@team.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>